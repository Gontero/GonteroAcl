<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php">
    <testsuites>
        <testsuite name="acl">
            <directory>./GonteroAclTest</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="junit" target="log/phpunit.xml"/>
        <log type="coverage-clover" target="log/phpunit-coverage.xml"/>
        <log type="coverage-html" target="log" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>